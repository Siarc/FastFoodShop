<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@drawable/white_squared_button">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="186dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:weightSum="1"
            android:background="@color/DarkRed">

            <TextView
                android:id="@+id/closeDialog"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Select Area To Navigate To Preferred Area "
                android:background="@color/AntiqueWhite"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_weight=".96"/>
            <TextView
                android:id="@+id/closeItemDialog"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Close"
                android:textSize="25dp"
                android:textColor="@color/Black"
                android:gravity="center"
                android:background="@drawable/white_rounded_button"
                android:backgroundTint="@color/White"
                android:layout_weight="0.04"/>


        </LinearLayout>
        <Button
            android:id="@+id/btn_homeActivity"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/white_rounded_button"
            android:text="Customer Area"
            android:textColor="@color/ForestGreen"
            android:textSize="20dp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btn_customizeActivity"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_rounded_button"
            android:text="Customize Area"
            android:textColor="@color/OrangeRed"
            android:textSize="20dp"
            android:textStyle="normal" />

    </LinearLayout>


</LinearLayout>