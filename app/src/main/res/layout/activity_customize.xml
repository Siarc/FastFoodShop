<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/categoryImage"
                    android:layout_width="30dp"
                    android:layout_height="60dp"
                    android:padding="3dp"
                    android:background="@drawable/white_squared_button"
                    android:scaleType="fitXY"
                    android:scaleX="1.0"
                    android:scaleY="1.0"/>

                <EditText
                    android:id="@+id/categoryName"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:background="@drawable/white_rounded_button"
                    android:gravity="fill_vertical|center_horizontal"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/Black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_select_category_image"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/white_rounded_button"
                    android:textSize="15sp"
                    android:text="S. Image" />

                <Button
                    android:id="@+id/btn_add_catagory"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="@drawable/white_rounded_button"
                    android:text="Add"
                    android:textSize="15sp" />

            </LinearLayout>


            <ListView
                android:id="@+id/czList"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ListView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/linearLayout1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lay1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/itemImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/white_squared_button"
                    android:padding="3dp"
                    android:scaleType="fitXY"
                    android:scaleX="1.0"
                    android:scaleY="1.0" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/itemName"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:background="@drawable/white_rounded_button"
                        android:gravity="fill_vertical|center_horizontal"
                        android:textColor="@color/Black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/itemPrice"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:background="@drawable/white_rounded_button"
                        android:inputType="number"
                        android:gravity="fill_vertical|center_horizontal"
                        android:textColor="@color/Black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/lay1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_select_item_image"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/white_rounded_button"
                    android:text="S. Image"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btn_add_item"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/white_rounded_button"
                    android:text="ADD"
                    android:textSize="15sp" />


            </LinearLayout>

            <GridView
                android:id="@+id/czGrid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="1">

            </GridView>

        </LinearLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>