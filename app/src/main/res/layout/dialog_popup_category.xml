<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:layout_weight="0.20"
        android:weightSum="1"
        android:background="@drawable/white_squared_button">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:weightSum="1"
            android:background="@color/OrangeRed">

            <TextView
                android:id="@+id/showCategoryName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@color/AntiqueWhite"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_weight=".96"/>
            <TextView
                android:id="@+id/closeCategoryDialog"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Close"
                android:textSize="15sp"
                android:textColor="@color/Black"
                android:gravity="center"
                android:background="@drawable/white_rounded_button"
                android:backgroundTint="@color/White"
                android:layout_weight="0.04"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginRight="65dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Change Image :"
                android:textColor="@color/ForestGreen"
                android:textSize="15sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/update_category_image"
                android:layout_marginLeft="20dp"
                android:layout_width="50dp"
                android:layout_height="50dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Change Name :"
                android:textSize="15sp"
                android:textColor="@color/ForestGreen"
                android:textStyle="normal"/>

            <EditText
                android:id="@+id/update_category_name"
                android:layout_width="200dp"
                android:layout_height="40dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_weight="0.37">

            <Button
                android:id="@+id/btn_select_categoryImage"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/white_rounded_button"

                android:text="S. Image"
                android:textColor="@color/ForestGreen"
                android:textSize="15sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/btn_update_category"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/white_rounded_button"
                android:text="Update"
                android:layout_marginTop="10dp"
                android:textColor="@color/ForestGreen"
                android:textSize="15sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/btn_delete_category"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/white_rounded_button"
                android:text="Delete"
                android:layout_marginTop="10dp"
                android:textColor="@color/OrangeRed"
                android:textSize="15sp"
                android:textStyle="normal" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>